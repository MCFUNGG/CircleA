<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base application theme -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color -->
        <item name="colorPrimary">@color/green_500</item>
        <item name="colorPrimaryVariant">@color/green_700</item>
        <item name="colorOnPrimary">@color/white</item>

        <!-- Secondary brand color -->
        <item name="colorSecondary">@color/purple_500</item>
        <item name="colorSecondaryVariant">@color/purple_700</item>
        <item name="colorOnSecondary">@color/white</item>

        <!-- Status bar color -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
    </style>

    <!-- Toggle Button Styles -->
    <style name="ToggleButtonStyle" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:minHeight">40dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:letterSpacing">0</item>
        <item name="android:textSize">12sp</item>
        <item name="android:padding">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="cornerRadius">20dp</item>
    </style>

    <!-- Tutor Button Style -->
    <style name="TutorButtonStyle" parent="ToggleButtonStyle">
        <item name="backgroundTint">@color/green_500</item>
    </style>

    <!-- Parent/Student Button Style -->
    <style name="PSButtonStyle" parent="ToggleButtonStyle">
        <item name="backgroundTint">@color/purple_500</item>
    </style>
    <style name="CustomRadioButton" parent="Widget.AppCompat.CompoundButton.RadioButton">
        <item name="android:background">@drawable/radio_button_background</item>
        <item name="android:button">@null</item>
        <item name="android:padding">16dp</item>
        <item name="android:layout_margin">8dp</item>
    </style>

    <style name="LessonDialogButton" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:textAlignment">textStart</item>

        <item name="android:layout_marginTop">@dimen/lesson_dialog_button_spacing</item>
        <item name="android:layout_marginBottom">@dimen/lesson_dialog_button_spacing</item>
        <item name="cornerRadius">@dimen/lesson_dialog_button_radius</item>
        <item name="strokeColor">@color/neutral_90</item>
        <item name="strokeWidth">1dp</item>
        <item name="android:minHeight">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:padding">@dimen/lesson_dialog_button_padding</item>
    </style>

    <style name="DialogOptionButton" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:textAlignment">textStart</item>
        <item name="android:layout_marginTop">@dimen/dialog_button_vertical_margin</item>
        <item name="android:layout_marginBottom">@dimen/dialog_button_vertical_margin</item>
        <item name="cornerRadius">@dimen/dialog_button_corner_radius</item>
        <item name="strokeColor">@color/neutral_90</item>
        <item name="strokeWidth">1dp</item>
        <item name="android:minHeight">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:padding">@dimen/dialog_button_padding</item>
        <item name="backgroundTint">@android:color/transparent</item>
        <item name="rippleColor">@color/primary_container</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textStyle">normal</item>
        <item name="android:letterSpacing">0</item>
    </style>

    <style name="DialogTitleStyle" parent="MaterialAlertDialog.Material3.Title.Text">
        <item name="android:textSize">20sp</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/black</item>
    </style>
</resources>