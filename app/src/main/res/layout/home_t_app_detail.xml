<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Blue Header Section -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#1E3F71"
            android:padding="16dp">

            <!-- Top Bar -->
            <LinearLayout
                android:id="@+id/topBar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/exitButton"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:src="@drawable/exit"
                    android:tint="#FFFFFF"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textColor="#FFFFFF"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:gravity="center"/>

                <ImageButton
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:src="@drawable/ic_more"
                    android:tint="#FFFFFF"/>
            </LinearLayout>

            <!-- Profile Image and Name -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_below="@id/topBar"
                android:gravity="center"
                android:layout_marginTop="16dp">

                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp">

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/tutorProfileImageView"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:src="@drawable/circle_background"/>

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_gravity="bottom|end"
                        android:background="@drawable/green_circle"
                        android:src="@drawable/ic_check"
                        android:padding="4dp"
                        android:tint="#FFFFFF"/>
                </FrameLayout>

                <TextView
                    android:id="@+id/tutorNameTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="导师姓名"
                    android:textColor="#FFFFFF"
                    android:textSize="22sp"
                    android:textStyle="bold"/>

            </LinearLayout>
        </RelativeLayout>

        <!-- Yellow Info Strip -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FFCD29"
            android:orientation="horizontal">

            <!-- Graduated From -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center"
                android:padding="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Graduated from"
                    android:textColor="#8B7200"
                    android:textSize="12sp"/>

                <TextView
                    android:id="@+id/educationText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="CUHK"
                    android:textColor="#000000"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:layout_marginTop="4dp"/>
            </LinearLayout>

            <!-- Divider -->
            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="#E0BB00"/>


            <!-- Divider -->
            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="#E0BB00"/>

            <!-- Price -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center"
                android:padding="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Price"
                    android:textColor="#8B7200"
                    android:textSize="12sp"/>

                <TextView
                    android:id="@+id/feeTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="$250/hr"
                    android:textColor="#000000"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:layout_marginTop="4dp"/>
            </LinearLayout>
        </LinearLayout>

        <!-- About Me Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="12dp"
            app:cardBackgroundColor="#F5F5F5"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="16dp">

            <LinearLayout
                android:id="@+id/aboutMeContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp"
                android:clickable="true"
                android:focusable="true"
                android:background="?attr/selectableItemBackground">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="About Me"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="#000000"
                    android:layout_marginBottom="8dp"/>

                <TextView
                    android:id="@+id/aboutMeText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="I was graduated from HKU Computer Science major since 2022..."
                    android:textColor="#666666"
                    android:textSize="14sp"
                    android:padding="4dp"/>

                <!-- 新增：显示更多/更少的TextView -->
                <TextView
                    android:id="@+id/showMoreLessText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/show_more"
                    android:textColor="#1E88E5"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:paddingTop="8dp"
                    android:paddingBottom="4dp"
                    android:visibility="gone"/>


            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Single Card for All Details -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp">

                <!-- Matching Score Circle -->
                <TextView
                    android:id="@+id/matchingScoreTextView"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentTop="true"
                    android:background="@drawable/circle_background"
                    android:gravity="center"
                    android:text="..."
                    android:textColor="#FF000000"
                    android:textSize="20sp"
                    android:textStyle="bold"/>

                <!-- Main Content -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toStartOf="@id/matchingScoreTextView"
                    android:orientation="vertical"
                    android:layout_marginEnd="16dp">

                    <!-- Application ID -->
                    <TextView
                        android:id="@+id/appIdTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="APP-001"
                        android:textColor="@android:color/darker_gray"
                        android:textSize="14sp"
                        android:layout_marginBottom="8dp"/>

                    <!-- Subject Section -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Subjects"
                        android:textColor="@android:color/darker_gray"
                        android:textSize="12sp"/>

                    <TextView
                        android:id="@+id/subjectTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Mathematics, Physics"
                        android:textColor="@android:color/black"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:layout_marginBottom="12dp"/>

                    <!-- Class Level Section -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Class Level"
                        android:textColor="@android:color/darker_gray"
                        android:textSize="12sp"/>

                    <TextView
                        android:id="@+id/classLevelTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Form 5"
                        android:textColor="@android:color/black"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:layout_marginBottom="12dp"/>



                    <!-- Districts Section -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Districts"
                        android:textColor="@android:color/darker_gray"
                        android:textSize="12sp"/>

                    <TextView
                        android:id="@+id/districtTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Central, Wan Chai"
                        android:textColor="@android:color/black"
                        android:textSize="16sp"
                        android:textStyle="bold"/>
                </LinearLayout>
            </RelativeLayout>
        </androidx.cardview.widget.CardView>

        <!-- Send Request Button -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="16dp">

            <Button
                android:id="@+id/applyButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Send Request"
                android:textColor="#FFFFFF"
                android:backgroundTint="#4CAF50"/>
        </LinearLayout>
    </LinearLayout>
</ScrollView>