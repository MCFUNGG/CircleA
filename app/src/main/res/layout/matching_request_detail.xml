<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Your existing content starts here -->
        <!-- Top Bar -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/exitButton"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:src="@drawable/exit"
                android:layout_gravity="center_vertical"/>

            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1"/>

        </LinearLayout>

        <!-- Profile Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            app:cardCornerRadius="8dp"
            app:cardBackgroundColor="#1E3F71">


        </androidx.cardview.widget.CardView>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="center"
                android:padding="16dp">

                <TextView
                    android:id="@+id/tutorAppIdTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tutor Application ID"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/tutorSubjectTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tutor Subject"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/tutorClassLevelTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tutor Class Level"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/tutorFeeTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tutor Fee"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/tutorDistrictTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tutor District"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/tutorMemberIdTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tutor Member ID"
                    android:textSize="18sp" />



            </LinearLayout>

        <!-- About Me Section -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="8dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="2dp">


        </androidx.cardview.widget.CardView>



        <!-- Buttons -->

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center"
            android:padding="16dp">

            <ImageView
                android:id="@+id/profileIcon"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_gravity="center"
                android:layout_marginTop="16dp"
                android:contentDescription="Profile Picture"
                android:src="@drawable/circle_background"/>

            <TextView
                android:id="@+id/psAppIdTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="PS Application ID"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/psSubjectTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="PS Subject"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/psClassLevelTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="PS Class Level"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/psFeeTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="PS Fee"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/psDistrictTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="PS District"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/psMemberIdTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="PS Member ID"
                android:textSize="18sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="16dp">


            <com.google.android.material.button.MaterialButton
                android:id="@+id/reject_Button"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginEnd="8dp"
                app:backgroundTint="#f23d3d"
                app:cornerRadius="20dp"
                app:strokeColor="#E0E0E0"
                app:strokeWidth="1dp"
                android:text="Reject"
                android:textColor="#FFFFFF"
                android:layout_marginRight="8dp"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/accept_Button"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="8dp"
                app:backgroundTint="#29B314"
                app:cornerRadius="20dp"
                android:text="Accept"
                android:textColor="#FFFFFF"
                android:layout_marginLeft="8dp"/>
        </LinearLayout>

    </LinearLayout>
</ScrollView>